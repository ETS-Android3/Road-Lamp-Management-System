<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChangePswActivity">


    <EditText
            android:hint="请输入新密码"
            android:layout_width="181dp"
            android:layout_height="wrap_content" android:id="@+id/newPsw1"
            android:inputType="text"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            />
    <Button
            android:text="确认"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonComfirm"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@+id/newPsw1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="返回"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonReturn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <EditText
            android:hint="确认密码"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/newPsw2"
            app:layout_constraintStart_toStartOf="@+id/newPsw1"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/newPsw1"
            app:layout_constraintBottom_toTopOf="@+id/buttonComfirm" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="144dp" app:layout_constraintTop_toBottomOf="@+id/newPsw1"
            app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>